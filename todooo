/* ************************************************************************** */

#include "include/libft.h"

static unsigned int	get_len_hex(unsigned int nb)
{
	unsigned long	hex;
	unsigned int	holder;

	hex = 0x01;
	if (nb == 0x00)
		hex *= 0x10;
	while (nb >= 0x01)
	{
		holder = nb / 0x10;
		nb = holder;
		hex *= 0x10;
	}
	return (hex / 0x10);
}

static int	write_digit(unsigned int digito, char c)
{
	char	ch;

	if (digito <= 9)
		ch = digito + '0';
	else
	{
		digito = digito - 10;
		ch = digito + 'a';
		if (c == 'X')
			ch = digito + 'A';
	}
	return (write(1, &ch, 1));
}

int	ft_xtoa_w(unsigned int nb, char c)
{
	unsigned int	len;
	unsigned int	digito;
	int				contador;

	contador = 0;
	len = get_len_hex(nb);
	while (len > 0x0)
	{
		digito = nb / len;
		contador += write_digit(digito, c);
		nb -= digito * len;
		len /= 0x10;
	}
	return (contador);
}
