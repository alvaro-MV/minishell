/* ************************************************************************** */

#include "include/libft.h"

void	ft_lstiter(t_list *lst, void (*f) (void *))
{
	t_list	*holder;

	while (lst != NULL)
	{
		holder = lst;
		lst = lst->next;
		f(holder->content);
	}
}
