/*                                                                            */
/* ************************************************************************** */

#include "include/libft.h"

t_list	*ft_lstnew(void *content)
{
	t_list	*new_n;

	new_n = (t_list *) malloc(sizeof(t_list));
	if (new_n == NULL)
		return (NULL);
	new_n->content = content;
	new_n->next = NULL;
	return (new_n);
}

