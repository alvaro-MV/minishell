#include "parser.h"

void	handle_sigint2(int sig)
{
	storage_signal(128 + sig, 1);
	write(1, "\n", 1);
	rl_on_new_line();
	rl_replace_line("", 0);
}

void	handle_sigquit2(int sig)
{
	storage_signal(128 + sig, 1);
}

void	handle_sigint_heredoc(int sig)
{
	storage_signal(128 + sig, 1);
	write(STDOUT_FILENO, "\n", 1);
	rl_on_new_line();
	rl_replace_line("", 0);
	close(0);
}
