/*                                                                            */
/* ************************************************************************** */

#include "builtins.h"
#include <unistd.h>

int	ft_pwd(void)
{
	char	buffer[1024];

	if (getcwd(buffer, sizeof(buffer)))
		ft_printf("%s\n", buffer);
	else
		perror("Error_pwd: too many arguments");
	return (0);
}

int	pwd2(void)
{
	if (ft_pwd() != 0)
	{
		ft_printf("error");
		return (1);
	}
	return (0);
}
